# =============================================================================
# Terraform Variables - EXAMPLE FILE
# Copy this to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control!
# =============================================================================

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "ecommerce-devops"
environment  = "dev"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]
allowed_ssh_cidr   = "YOUR_IP/32"  # Replace with your IP

# Database Configuration (SENSITIVE - use environment variables in CI/CD)
db_instance_class = "db.t3.micro"
db_name           = "ecommerce"
db_username       = "ecomadmin"
db_password       = "CHANGE_THIS_PASSWORD"  # Use AWS Secrets Manager in production

# EKS Configuration
eks_cluster_version     = "1.28"
eks_node_instance_types = ["t3.medium"]
eks_desired_capacity    = 2
eks_min_size            = 1
eks_max_size            = 4

# EC2 Configuration (Fallback)
ec2_instance_type = "t3.medium"
ec2_key_name      = "ecommerce-key"
